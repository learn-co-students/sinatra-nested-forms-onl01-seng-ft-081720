<h1>Display your Pirate here</h1>
<div class "pirate">  
<p>Name: <%= @pirate.name %>
<p>Height: <%= @pirate.height %>
<p>Weight: <%= @pirate.weight %>
</div><br>

<h2>Ships</h2>

<%@ships.each do |ship| %>
<div class= "ship"> 
<%= ship.name %>
<%= ship.type %>
<%= ship.booty %>
</div>  
<% end  %>


  
   

